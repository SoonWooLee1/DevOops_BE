<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.devoops.oopslog.comments.query.mapper.CommentsMapper">
    <resultMap id="getCommentsMap" type="com.devoops.oopslog.comments.query.dto.CommentsQueryDTO">
        <id property="id" column="ID"/>
        <result property="content" column="CONTENT"/>
        <result property="create_date" column="CREATE_DATE"/>
        <result property="is_deleted" column="IS_DELETED"/>
        <result property="oops_id" column="OOPS_ID"/>
        <result property="ooh_id" column="OOH_ID"/>
        <result property="user_id" column="USER_ID"/>
        <result property="notice_id" column="NOTICE_ID"/>
    </resultMap>
    <select id="selectCommentsByOohId" resultMap="getCommentsMap" parameterType="_int">
        SELECT
               A.ID
             , A.CONTENT
             , A.CREATE_DATE
             , A.IS_DELETED
             , A.OOH_ID
             , A.USER_ID
          FROM comments A
         WHERE A.OOH_ID = #{oohId}
    </select>
    <select id="selectCommentsByOopsId" resultMap="getCommentsMap" parameterType="_int">
        SELECT
               A.ID
             , A.CONTENT
             , A.CREATE_DATE
             , A.IS_DELETED
             , A.OOPS_ID
             , A.USER_ID
          FROM comments A
         WHERE A.OOPS_ID = #{oops_id}
    </select>
    <select id="selectCommentsByNoticeId" resultMap="getCommentsMap" parameterType="_int">
        SELECT
               A.ID
             , A.CONTENT
             , A.CREATE_DATE
             , A.IS_DELETED
             , A.USER_ID
             , A.NOTICE_ID
          FROM comment A
         WHERE A.NOTICE_ID = #{notice_id}
    </select>
</mapper>